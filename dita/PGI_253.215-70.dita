                  <row rowsep="0" class="- topic/row ">
                     <entry class="- topic/entry ">
                        <p class="- topic/p ">Standard weighted guidelines method (DFARS <ph xtrc="PGIxref" class="- topic/ph ">
                              <xref outputclass="fm:ParaNumOnly"
                                    class="- topic/xref "
                                    base="DFARS-PGI_PGI_215.404-71"
